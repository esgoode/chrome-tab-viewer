{
  "manifest_version": 2,

  "name": "Tab Viewer",
  "description": "This extension shows all your open tabs in a new tab",
  "version": "0.1",

  "permissions": ["tabs", "http://*/*", "https://*/*", "<all_urls>", "activeTab", "background"],
  "chrome_url_overrides" : {
    "newtab": "single.html"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  }
}
